@model User

<h4 style="margin:40px;">@ViewBag.Message</h4>
<form asp-action="Register" asp-controller="Account" method="post">
    <label asp-for="Name">Name</label>
    <input type="text" asp-for="Name" placeholder="Enter Name" name="name" required />
    <br><br>

    <label asp-for="Email">Email</label>
    <input type="text" asp-for="Email" placeholder="Enter Email" name="email" required />
    <br><br>

    <label asp-for="Password">Password:</label>
    <input type="password" asp-for="Password" placeholder="Enter Password" name="password" required />
    <br><br>

    <input type="submit" value="Submit" />
</form>
