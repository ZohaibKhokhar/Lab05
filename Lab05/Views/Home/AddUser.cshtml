@model User

<form asp-action="AddUser" asp-controller="Home" method="post">
    <label asp-for="Name">User Name:</label>
    <input type="text" asp-for="Name" placeholder="Enter Username" required />
    <br><br>

    <label asp-for="Password">Password:</label>
    <input type="password" asp-for="Password" placeholder="Enter Password" required />
    <br><br>

    <input type="submit" value="Submit" />
</form>
